FROM bitnami/minideb-extras-base:stretch-r223
LABEL maintainer "Bitnami <containers@bitnami.com>"

ENV BITNAMI_PKG_CHMOD="-R g+rwX" \
    HOME="/" \
    OS_ARCH="amd64" \
    OS_FLAVOUR="debian-9" \
    OS_NAME="linux"

# Install required system packages and dependencies
RUN install_packages libbsd0 libc6 libedit2 libgcc1 libicu57 liblzma5 libncurses5 libnss-wrapper libssl1.1 libstdc++6 libtinfo5 libxml2 libxslt1.1 zlib1g locales
RUN echo 'en_GB.UTF-8 UTF-8' >> /etc/locale.gen && locale-gen
RUN echo 'en_US.UTF-8 UTF-8' >> /etc/locale.gen && locale-gen
RUN . ./libcomponent.sh && component_unpack "postgresql" "9.6.12-0" --checksum 023153a33abf241f38f76518098b18c6ebfbf056937d5bfc8d997cf83596baa6
COPY rootfs /
RUN /post-unpack.sh

ENV BITNAMI_APP_NAME="postgresql" \
    BITNAMI_IMAGE_VERSION="9.6.12-debian-9-r68" \
    LANG="en_US.UTF-8" \
    LANGUAGE="en_US:en" \
    PATH="/opt/bitnami/postgresql/bin:$PATH" \
    NSS_WRAPPER_LIB="/usr/lib/libnss_wrapper.so"

EXPOSE 5432
VOLUME [ "/bitnami/postgresql" "/docker-entrypoint-initdb.d" ]

USER 1001
ENTRYPOINT [ "/entrypoint.sh" ]
CMD [ "/run.sh" ]
